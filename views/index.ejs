<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Chat</h1>
    <div id="chat"></div>
    <br />
    <input type="text" id="msg" />
    <br />
    <input type="text" id="username" placeholder="Seu nome de usuÃ¡rio" />
    <button onclick="enviar()">Enviar</button>
  </body>
  <script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"
  ></script>
  <script>
    const socket = io("http://localhost:8686/");
    socket.on("disconnect", (data) => {
      console.log("foi");
    });
    socket.on("showmsg", (data) => {
      const chat = document.getElementById("chat");
      const p = document.createElement("p");
      p.innerHTML = `${data.username}: ${data.msg}`;
      chat.append(p);
    });
    function enviar() {
      const msgField = document.getElementById("msg");
      const usernameField = document.getElementById("username");

      const msg = msgField.value;
      const username = usernameField.value;

      socket.emit("msg", { msg, username });
    }
  </script>
</html>
